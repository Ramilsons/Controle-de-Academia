{% extends "layout.njk" %}
{% block content %}
    <div class="card">
        <section 
        class="avatar imagem"
        style="background: url({{ instructor.avatar_url }})"></section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>Instrutor</div>
                <div>{{instructor.name}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{instructor.age}}</div>
            </div>
            <div class="item">
                <div>Sexo</div>
                <!--  Coloque Masculino se o instructor.gender for igual a M, se não coloque Feminino -->
                <div>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</div>
            </div>
            <div class="item">
                <div>Área</div>
                <div>
                    {% for service in instructor.services %}
                    <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div> 
               <div class="item">
                <div>Desde</div>
                <div>{{instructor.created_at}}</div>
            </div>
            <a href="/instructors/{{instructor.id}}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}